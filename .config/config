theme = GruvboxDarkHard
font-size=16
cursor-style=block
shell-integration-features = no-cursor

mouse-hide-while-typing=true

window-padding-balance=true
window-save-state=always
macos-titlebar-style=tabs
macos-option-as-alt = true
window-colorspace="display-p3"

# This keybind set up is done for a macro key to act as the tmux prefix for navigation
keybind = super+ctrl+alt+shift+left=text:\x01\x1b[D
keybind = super+ctrl+alt+shift+right=text:\x01\x1b[C
keybind = super+ctrl+alt+shift+up=text:\x01\x1b[A
keybind = super+ctrl+alt+shift+down=text:\x01\x1b[B

