#!/usr/bin/env bash

set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
PACKAGES=(zsh tmux homebrew nvim ghostty zed)

cd "$ROOT_DIR"
stow --target="$HOME" --adopt "${PACKAGES[@]}"

echo "Adopted existing files into repo and linked packages."
echo "Review changes in git and commit if they look right."
